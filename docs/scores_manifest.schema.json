{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scores Manifest (batch scoring export â†’ Fabric)",
  "type": "object",
  "required": [
    "table",
    "created_ts",
    "as_of_date",
    "schema",
    "files",
    "row_count",
    "model_version",
    "feature_version"
  ],
  "properties": {
    "table": { "type": "string", "description": "Scored table name, e.g., customer_scores_gold" },
    "created_ts": { "type": "string", "format": "date-time" },
    "as_of_date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$", "description": "YYYY-MM-DD for the scoring cut" },
    "model_version": { "type": "string", "description": "Registry/model version or tag" },
    "feature_version": { "type": "string", "description": "Feature set version or tag" },
    "run_ids": { "type": "array", "items": { "type": "string" }, "description": "MLflow run IDs referenced" },
    "schema": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "dtype", "nullable"],
        "properties": {
          "name": { "type": "string" },
          "dtype": { "type": "string" },
          "nullable": { "type": "boolean" }
        }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "size_bytes"],
        "properties": {
          "path": { "type": "string" },
          "size_bytes": { "type": "integer" },
          "md5": { "type": "string" }
        }
      }
    },
    "row_count": { "type": "integer" },
    "checksums": { "type": "object", "additionalProperties": { "type": "string" } },
    "buckets": {
      "type": "object",
      "description": "Optional bucket metadata for deterministic segmentation",
      "properties": {
        "churn_bucket_edges": { "type": "array", "items": { "type": "number" } },
        "clv_bucket_edges": { "type": "array", "items": { "type": "number" } }
      }
    },
    "notes": { "type": "string" }
  }
}
